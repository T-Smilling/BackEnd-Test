include ../mixins/sub-menu.pug
header.header 
    .container 
        .row.align-iteams-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src=settingGeneral.logo,alt="LOGO")
            .col-5 
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa..."
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm
                            
            .col-4
                .inner-menu 
                    ul 
                        li  
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            - const pathProducts="/products"
                            a(href=pathProducts) Sản phẩm
                                if(layoutProductsCategory)
                                    +sub-menu(layoutProductsCategory,pathProducts)
                        li 
                            a(href="/cart") Giỏ hàng (#{miniCart? miniCart.totalQuantity : "0"})
                        if(user)
                            li 
                                a(href="/user/logout") Đăng xuất
                            li 
                                a(href="/user/info") #{user.fullName}
                            li
                                a(href="/rooms-chat") Phòng chat
                            li 
                                a(href="/users/friends") Bạn bè
                        else 
                            li 
                                a(href="/user/register") Đăng kí
                            li 
                                a(href="/user/login") Đăng nhập
