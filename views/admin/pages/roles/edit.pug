extends ../../layouts/layoutDefault.pug
include ../../mixins/alert.pug
block main 
  +alert-error(5000)
  +alert(5000)
  h1(class="mb-4") Chỉnh sửa

  form(
    action=`${prefixAdmin}/roles/edit/${product.id}?_method=PATCH`
    method="POST"
  )

    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
        value=product.title
      )
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="5"
      ) #{product.description}
    
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật
  script(src="/admin/js/product.js")