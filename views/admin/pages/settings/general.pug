extends ../../layouts/layoutDefault.pug
include ../../mixins/alert.pug
block main
  +alert-error(5000)
  +alert(5000)

  h1(class="mb-4") Cài đặt chung

  form(
    action=`${prefixAdmin}/settings/general?_method=PATCH`
    method="POST"
    entype="multipart/form-data"
  )
    div(class="form-group")
      label(for="websiteName") Tên website
      input(
        type="text"
        class="form-control"
        id="websiteName"
        name="websiteName"
      )
    div(
      class="form-group"
      upload-image
    )
      label(for="logo") Logo
      input(
        type="file"
        class="form-control-file"
        id="logo"
        name="logo"
        accept="image/*"
        upload-image-input
      )
      img(
        src=""
        upload-image-preview
        class="image-preview"
      ) 
      <span close-image>x</span> 
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
      )
    div(class="form-group")
      label(for="email") Email
      input(
        type="text"
        class="form-control"
        id="email"
        name="email"
      )
    div(class="form-group")
      label(for="address") Địa chỉ
      input(
        type="text"
        class="form-control"
        id="address"
        name="address"
      )
    div(class="form-group")
      label(for="copyright") Copyright
      input(
        type="text"
        class="form-control"
        id="copyright"
        name="copyright"
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật
